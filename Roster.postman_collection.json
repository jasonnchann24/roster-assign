		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let response;",
							"try {",
							"    response = pm.response.json();",
							"} catch (e) {",
							"    console.error(\"Failed to parse response as JSON:\", e);",
							"    return;",
							"}",
							"",
							"if (response && response.data && response.data.access_token) {",
							"    pm.collectionVariables.set(\"auth_token\", response.data.access_token);",
							"} else {",
							"    console.error(\"Login response missing 'data.access_token'. Full response:\", response);",
							"}",
							"",
							"const refreshToken = pm.response.headers.get('X-Refresh-Token');",
							"",
							"if (refreshToken) {",
							"    pm.collectionVariables.set('refresh_token', refreshToken);",
							"} else {",
							"    console.warn('No X-Refresh-Token header found!');",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
